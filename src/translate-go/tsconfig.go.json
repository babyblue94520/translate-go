{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../../dist",
    "sourceMap": false,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "../../src/",
    "plugins": [{
        "name": "@angular/language-service"
      },
      {
        "name": "tslint-language-service"
      }
    ]
  }
}
